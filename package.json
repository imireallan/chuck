{
  "name": "chuck",
  "version": "1.0.0",
  "description": "An application that uses the Apollo Server and React to display the random jokes using the Chuck API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imireallan/chuck.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/imireallan/chuck/issues"
  },
  "homepage": "https://github.com/imireallan/chuck#readme",
  "dependencies": {
    "apollo-server-express": "^2.14.1",
    "axios": "^0.21.1",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "prettier": {
    "tabWidth": 4
  }
}
